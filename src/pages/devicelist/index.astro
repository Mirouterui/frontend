---
// src/pages/index.astro
import BaseLayout from '../../layouts/Layout.astro';
const base = import.meta.env.BASE_URL;
---

<BaseLayout title="MiRouter-UI | 设备列表">
  <!-- 添加ECharts脚本 -->
  <Fragment slot="head">
    <script src={`${base}js/echarts.min.js`}></script>
  </Fragment>
  

  
  <!-- 主要内容 -->
  <main slot="main">
	<div class="mdui-container">
		<div class="mdui-card mdui-m-a-2">
			<div class="mdui-card-content">
				<div class="mdui-typo-subheading-opacity mdui-m-y-1" i18n="devicelist.subheading">设备列表</div>
				<div class="mdui-divider gap"></div>
				<div class="mdui-table-fluid">
					<table class="mdui-table mdui-table-hoverable">
						<thead>
							<tr>
								<th i18n="general.th.devicename">设备名称</th>
								<!-- <th>详细数据</th> -->
								<th id="switchdownspeed" i18n="general.th.downloadspeed">下载速度</th>
								<th id="switchupspeed" i18n="general.th.uploadspeed">上传速度</th>
								<th i18n="general.th.onlinetime">在线时长</th>
								<th i18n="general.th.connectway">连接方式</th>
								<th i18n="general.th.ipaddress">IP地址</th>
								<th i18n="general.th.mac">MAC</th>

							</tr>
						</thead>
						<tbody id="device-list">
						</tbody>
					</table>
				</div>
				<div class="mdui-divider gap"></div>

				<span class="mdui-typo-subheading-opacity mdui-m-y-1" i18n="devicelist.subheading2">
					当前连接了 <strong><span id="devicenum_now">load</span></strong> 个设备<span id="warning" style="display: none;">（设备过多，可能部分设备详细信息无法显示，如智能家居）</span>
				</span>
			</div>
		</div>
		<script src={`${base}js/devicelist.js`}></script>
	</div>
  </main>
</BaseLayout>